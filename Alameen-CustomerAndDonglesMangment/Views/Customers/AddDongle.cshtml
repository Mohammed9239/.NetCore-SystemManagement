@model Alameen_CustomerAndDonglesMangment.Models.Customers
@{
    ViewData["Title"] = "ربط عميل بالدنقل";
}

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>لوحة التحكم / ربط عميل بالدنقل </h2>
        </div>
    </div>
</div>

<div class="row">

    <form asp-action="AddDongle" style="display:contents">
        <div class="col-md-8 d-grid mx-auto" style="display: grid;">
             
            <input type="hidden" asp-for="Id" />
            <div class="white_shd add_pro full margin_bottom_30" style="padding: 20px;">

                <div class="margin_bottom_30">
                    <Label>العميل</Label>
                    <select asp-for="Id" class="form-control">
                        <option value="">@Model.Name</option>
                    </select>
                </div>

                <div class="margin_bottom_30">
                    <Label>الرقم التسلسلي للدنقل </Label>
                    <select name="DongleId" class="selectpicker form-control" data-live-search="true" asp-items="ViewBag.Dongles">
                        <option value="">اختر</option>
                    </select>
                </div>


                <input id="save" type="submit" class="btn btn-success form-control" value="ربط">

            </div>



        </div>
    </form>

</div>

