@model Alameen_CustomerAndDonglesMangment.Models.Tasks

@{
    ViewData["Title"] = "حذف البلاغ";
}

<style>
    .form-control[readonly]{
        background-color:#ffffff
    }
</style>

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>لوحة التحكم / حذف البلاغ</h2>
        </div>
    </div>
</div>

<div class="row">
    <form asp-action="Delete" style="display: contents">
        <input type="hidden" asp-for="Id" />
        <div class="col-md-8 mx-auto d-grid" style="display: grid;">

            <div class="white_shd add_pro margin_bottom_30" style="padding: 20px;">
                <div class="margin_bottom_30">
                    <Label>اسم المبلغ</Label>
                    <input asp-for="NameOfCustomer" class="form form-control" readonly />

                    <Label>العميل</Label>
                    <select id="Getsub" class="selectpicker form-control" data-live-search="true">
                        <option>@Model.Customer.Name</option>
                    </select>

                    <Label>المشكلة</Label>
                    <textarea asp-for="Problem" class="form-control" readonly></textarea>

                    <Label>نوع الصيانة</Label>
                    <select id="Getsub" class="selectpicker form-control">
                        <option>@Model.MaintenanceType?.Name</option>
                    </select>

                    <Label>المختص</Label>
                    <select id="Getsub" class="selectpicker form-control" data-live-search="true">
                        <option>@Model.User.FullName</option>
                    </select>

                    <Label>الحاله</Label>
                    <select class="form-control">
                        <option>@Html.DisplayFor(i => Model.State)</option>
                    </select>

                    <Label>قيمة الصيانة</Label>
                    <input asp-for="Cost" class="form form-control" readonly/>

                    <Label>ملاحضات</Label>
                    <textarea asp-for="Note" class="form-control" readonly></textarea>

                    <input id="save" type="submit" class="btn btn-danger form-control mt-2" value="حذف البلاغ">

                </div>


            </div>

        </div>

    </form>
</div>